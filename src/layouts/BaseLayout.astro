---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { withBase } from '../lib/urls';

const { title = 'רברס עם פלטפורמה', description = 'פודקאסט על תוכנה, מוצר, ותשתיות — בעברית.' } = Astro.props;
const gaId = import.meta.env.PUBLIC_GA_ID ?? 'G-Y4CQKFBQGR';
---

<html lang="he" dir="rtl">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="icon" type="image/svg+xml" href={withBase('/favicon-dark-mode.svg')} />
		<link rel="icon" type="image/svg+xml" href={withBase('/favicon-light-mode.svg')} media="(prefers-color-scheme: light)" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Assistant:wght@300;400;500;600;700&family=IBM+Plex+Mono:wght@400;500&family=IBM+Plex+Sans+Hebrew:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap"
		/>
		{
			import.meta.env.PROD && (
				<>
					<script async src={`https://www.googletagmanager.com/gtag/js?id=${gaId}`}></script>
					<script
						is:inline
						set:html={`
							window.dataLayer = window.dataLayer || [];
							function gtag(){dataLayer.push(arguments);}
							gtag('js', new Date());
							gtag('config', '${gaId}');
						`}
					/>
				</>
			)
		}
	</head>
	<body>
		<Header />
		<main id="content" class="site-main">
			<slot />
		</main>
		<Footer />
	</body>
</html>
